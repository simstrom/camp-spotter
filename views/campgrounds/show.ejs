<% layout('layouts/boilerplate') %>

	<div class="row">
		<div class="col-6 offset-3">
			<div class="mb-3">
				<a href="/campgrounds" class="btn btn-outline-secondary" role="button">
					Back to Campgrounds
				</a>
			</div>
			<div class="card mb-5">
				<img src="<%= campground.image %> " class="card-img-top" alt="" />
				<div class="card-body">
					<h5 class="card-title mb-1">
						<%= campground.title %>
					</h5>
					<h6 class="card-subtitle text-muted mb-2">
						<%= campground.location %>
					</h6>
					<p class="card-text">
						<%= campground.description %>
					</p>
				</div>
				<ul class="list-group list-group-flush">
					<li class="list-group-item">$<%= campground.price %> per Night</li>
				</ul>
				<div class="card-body">
					<a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-primary" role="button">
						Edit
					</a>
					<form class="d-inline" action="/campgrounds/<%= campground.id %>?_method=DELETE" method="post">
						<button type="submit" class="btn btn-outline-danger">Delete</button>
					</form>
				</div>
				<div class="card-footer text-muted">2 days ago</div>
			</div>
			<h2>Leave a Review</h2>
			<form class="mb-3" action="/campgrounds/<%= campground._id %>/reviews" method="post">
				<div class="mb-3">
					<label class="form-label" for="rating">Rating</label>
					<input class="form-range" type="range" name="review[rating]" id="rating" min="1" max="5">
				</div>
				<div class="mb-3">
					<label class="form-label" for="body">Review</label>
					<textarea class="form-control" name="review[body]" id="body" cols="30" rows="3"></textarea>
				</div>
				<button class="btn btn-success" type="submit">Add Review</button>
			</form>
		</div>
	</div>