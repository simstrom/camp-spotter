<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/styles/stars.css">

<div class="row">
	<div class="col-6">
		<div class="mb-3">
			<a href="/campgrounds" class="btn btn-outline-secondary" role="button">
				Back to Campgrounds
			</a>
		</div>
		<div class="card mb-5">
			<% for (let img of campground.images) { %> 
				<img src="<%= img.url %> " class="card-img-top" alt="" />
			<% } %> 
			<div class="card-body">
				<h5 class="card-title mb-1"><%= campground.title %></h5>
				<h6 class="card-subtitle text-muted mb-2">
					<%= campground.location %>
				</h6>
				<p class="card-text"><%= campground.description %></p>
			</div>
			<ul class="list-group list-group-flush">
				<li class="list-group-item">$<%= campground.price %> per Night</li>
				<li class="list-group-item text-muted text-sm">
					Submitted by: 
					<% if (currentUser && campground.author.equals(currentUser._id)) { %>
						you
					<% } else { %> 
						<%= campground.author.username %></h6>
					<% } %>
				</li>
			</ul>
			<% if (currentUser && campground.author.equals(currentUser._id)) { %>
			<div class="card-body">
				<a
					href="/campgrounds/<%= campground._id %>/edit"
					class="btn btn-primary"
					role="button"
				>
					Edit
				</a>
				<form
					class="d-inline"
					action="/campgrounds/<%= campground.id %>?_method=DELETE"
					method="post"
				>
					<button type="submit" class="btn btn-outline-danger">Delete</button>
				</form>
			</div>
			<% } %>
			<div class="card-footer text-muted">Last Updated: <%= campground.updated.toLocaleDateString() %> </div>
		</div>
	</div>
	<div class="col-6 mt-5">
		<% if (currentUser) { %>
		<h2>Leave a Review</h2>
		<form
			class="mb-5 validated-form"
			action="/campgrounds/<%= campground._id %>/reviews"
			method="post"
			novalidate
		>
			<div>
				<fieldset class="starability-checkmark">
					<input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
					<input type="radio" id="first-rate1" name="review[rating]" value="1" />
					<label for="first-rate1" title="Terrible">1 star</label>
					<input type="radio" id="first-rate2" name="review[rating]" value="2" />
					<label for="first-rate2" title="Not good">2 stars</label>
					<input type="radio" id="first-rate3" name="review[rating]" value="3" />
					<label for="first-rate3" title="Average">3 stars</label>
					<input type="radio" id="first-rate4" name="review[rating]" value="4" />
					<label for="first-rate4" title="Very good">4 stars</label>
					<input type="radio" id="first-rate5" name="review[rating]" value="5" />
					<label for="first-rate5" title="Amazing">5 stars</label>
				  </fieldset>
			</div>
			<div class="mb-3">
				<label class="form-label" for="body">Review</label>
				<textarea
					class="form-control"
					name="review[body]"
					id="body"
					cols="30"
					rows="3"
					required
				></textarea>
				<div class="invalid-feedback">Please provide a review.</div>
			</div>
			<button class="btn btn-success" type="submit">Add Review</button>
		</form>
		<% } %>
		<div class="mb-3">
			<h2>All Reviews</h2>
			<% if (!campground.reviews.length) { %>
			<p>There's no reviews for this Campground yet!</p>
			<% } %>
			<% campground.reviews.reverse() %>  
			<% for (let review of campground.reviews) { %>
			<div class="card mb-3">
				<div class="card-body">
					<h5 class="card-title mb-2"> 
						<% if (currentUser && review.author.equals(currentUser._id)) { %>
							you
							<% } else { %> 
						<%= review.author.username %></h6>
						<% } %> 
					</h5>
					<p class="starability-result" data-rating="<%= review.rating %>">
						Rated: <%= review.rating %> stars
					  </p>
					<p class="card-text mb-2"><%= review.body %></p>
					<p class="card-text text-muted">Posted on: <%= review.created.toLocaleDateString() %></p>
					<% if (currentUser && review.author.equals(currentUser._id)) { %> 
					<form
						action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=DELETE"
						method="post"
					>
						<button class="btn btn-sm btn-outline-danger" type="submit">
							Delete
						</button>
					</form>
					<% } %> 
				</div>
			</div>
			<% } %>
		</div>
	</div>
</div>
